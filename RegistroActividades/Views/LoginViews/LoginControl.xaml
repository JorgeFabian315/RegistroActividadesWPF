<UserControl x:Class="RegistroActividades.Views.LoginViews.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegistroActividades.Views.LoginViews"
             xmlns:views="clr-namespace:RegistroActividades.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:LoginView x:Key="loginView" />
        <Style TargetType="UserControl">
            <Setter Property="Content" Value="{StaticResource loginView}"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <local:LoginView />
    </Grid>
</UserControl>
